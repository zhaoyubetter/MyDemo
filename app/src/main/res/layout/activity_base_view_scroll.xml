<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scrollTo/By、Tween动画 完全不影响 left、top、right、bottom；x、y；translationX/Y "/>

    <Button
        android:id="@+id/btn_prop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性动画" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scroll_by-10" />

        <Button
            android:id="@+id/btn_scrollBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scroll_by_10" />

        <Button
            android:id="@+id/btn_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#18000000">

        <TextView
            android:id="@+id/tv_base"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:background="@color/blue_27"
            android:gravity="center"
            android:padding="16dp"
            android:text="demo" />
    </RelativeLayout>

</LinearLayout>