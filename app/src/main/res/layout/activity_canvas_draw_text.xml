<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_baseline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0,10f)" />

        <Button
            android:id="@+id/btn_baseline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指定基线" />

        <Button
            android:id="@+id/btn_x_left"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="x_左" />

        <Button
            android:id="@+id/btn_x_center"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="x_中" />

        <Button
            android:id="@+id/btn_x_right"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="x_右" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_font_metrics"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="font_metrics" />

        <Button
            android:id="@+id/btn_min_rect"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="最小矩形" />

        <Button
            android:id="@+id/btn_draw_on_top"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="指定Top" />

        <Button
            android:id="@+id/btn_draw_on_center"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="指定Center" />

    </LinearLayout>

</LinearLayout>
