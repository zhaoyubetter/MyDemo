<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_filter_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Light_Color_Filter"/>

        <Button
            android:id="@+id/btn_color_filter_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PorterDuff"/>

        <Button
            android:id="@+id/btn_color_filter_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="setTint"/>

        <Button
            android:id="@+id/btn_color_filter_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tint_porterDuff"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/root_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
